<Page
  x:Class="StudentRecordsWPFUI.Pages.LecturerStudentAnalytics"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:models="clr-namespace:StudentRecordsModels.Models;assembly=StudentRecordsModels"
  mc:Ignorable="d">

  <StackPanel>
    <TextBlock
      Visibility="{Binding LecturerHasCourse, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
      Margin="12,0,0,0"
      FontSize="32">
      <Run Text="Graduated Students: "/>
      <Run Text="{Binding GetGraduatedStudents()}"/>
    </TextBlock>

    <TextBlock Margin="12,48,0,0" FontSize="32" Text="Student Records"/>
    <ListView
      x:Name="lecturerResultsListView"
      ItemsSource="{Binding GetLecturerResults()}">
      <ListView.ItemTemplate>
        <DataTemplate DataType="{x:Type models:Result}">
          <StackPanel>
            <TextBlock FontSize="16" Text="{Binding Assignment}"/>
            <TextBlock Foreground="DarkGray" FontSize="16" Text="{Binding Student}"/>
            <TextBlock Foreground="DarkGray" FontSize="16">
              <Run Text="Grade: "/>
              <Run Text="{Binding Grade}"/>
            </TextBlock>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackPanel>
</Page>
